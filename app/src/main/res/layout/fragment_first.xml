<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragments.FIrstFragment"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="0.5">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="15dp"
            app:cardCornerRadius="250dp"
            app:cardElevation="0dp"
            >
            <ImageButton
                android:id="@+id/profile_picture"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_img_profile_first_fragment"
                android:scaleType="center"
                >
            </ImageButton>
        </androidx.cardview.widget.CardView>


        <ImageButton
            android:id="@+id/notification"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="right"
            android:src="@drawable/notification_on"
            android:scaleType="centerInside"
            android:padding="0dp"
            android:background="@android:color/transparent"
            >
        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:text="Encuentra a tu mÃºsico"
            android:fontFamily="@font/figtree_bold"
            android:textSize="24dp"
            android:layout_marginBottom="20dp"
            />
    </FrameLayout>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.5"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/white"
    android:elevation="16dp"
    app:cardElevation="8dp">
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_chosed_enought_locals_for_now"
        android:layout_gravity="center"/>

    <com.yuyakaido.android.cardstackview.CardStackView
        android:id="@+id/CVMusicians"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginHorizontal="2dp"
        />

</androidx.cardview.widget.CardView>
</LinearLayout>